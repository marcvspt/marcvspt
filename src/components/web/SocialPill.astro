---
const { url } = Astro.props;
---

<a
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    role="link"
    class="inline-flex border border-purple-500 bg-violet-300/20 dark:bg-violet-950/40 rounded-full items-center justify-center gap-2 px-4 py-1 hover:bg-purple-500 text-gray-700 dark:text-white"
>
    <slot name="icon" />
    <slot />
</a>
